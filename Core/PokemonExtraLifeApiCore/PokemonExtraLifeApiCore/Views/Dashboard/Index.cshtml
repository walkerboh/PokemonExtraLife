@model PokemonExtraLifeApiCore.Models.Dashboard.DashboardModel

<script src="~/js/site.js"></script>

<div class="row">
    <div class="col-4">
        <partial name="Donations" for="DonationsModel" />
    </div>
    <div class="col-8">
        <div class="row">
            <div class="col-6">
                <partial name="Summary" for="SummaryModel" />
                <partial name="Games" for="GamesModel" />
                <partial name="PokemonStatus" for="PokemonStatusModel" />
            </div>
            @*<div class="col-6">
                    <partial name="Group" for="GroupModel" />
                </div>*@
            <div class="col-6">
                <partial name="Prizes" for="PrizesModel" />
            </div>
        </div>
    </div>
</div>

@section Footer
{
    <span style="margin-right: 10px;">Last refreshed at: @DateTime.Now</span>
    <input type="checkbox" id="reloadToggle" checked="checked" />
    Auto Reload
}
