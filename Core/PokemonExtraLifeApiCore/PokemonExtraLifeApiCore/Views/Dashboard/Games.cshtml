@model PokemonExtraLifeApiCore.Models.Dashboard.GamesModel

<script src="~/js/Dashboard/Games.js"></script>

<div id="GamesSection">
    <form method="post" data-ajax="true" asp-controller="Dashboard" asp-action="UpdateGames" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#GamesSection">
        <h3>Games!</h3>
        <div>
            <label asp-for="CurrentGame"></label>
            <input asp-for="CurrentGame"/>
        </div>
        <div>
            <label asp-for="NextGame"></label>
            <input asp-for="NextGame" />
        </div>
        @*<div>
            <label asp-for="FollowingGame"></label>
            <input asp-for="FollowingGame"/>
        </div>*@
        <div>
            <button type="button" onclick="ShiftGames()">Shift Games "Up"</button>
            <button type="submit">Update Games</button>
        </div>
    </form>
</div>